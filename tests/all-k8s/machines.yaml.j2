machines:
  "0":
    base: ubuntu@24.04
    arch: amd64

applications:
  microceph:
    charm: ch:microceph
    channel: squid/stable
    base: ubuntu@24.04
    arch: amd64
    to:
      - "0"
    scale: 1
    options:
      snap-channel: squid/stable
      default-pool-size: 1
    storage:
      osd-standalone: loop,3,2G
  cinder-volume:
    charm: ch:cinder-volume
    channel: 2025.1/edge
    scale: 1
    to:
      - "0"
    options:
      snap-channel: 2025.1/edge
  cinder-microceph:
    charm: ch:cinder-volume-ceph
    channel: 2025.1/edge
    options:
      ceph-osd-replication-count: 1
  hypervisor:
    charm: ch:openstack-hypervisor
    channel: 2025.1/edge
    scale: 1
    to:
      - "0"
    arch: amd64
    options:
      snap-channel: 2025.1/edge
      external-bridge-address: 0.0.0.0/0

