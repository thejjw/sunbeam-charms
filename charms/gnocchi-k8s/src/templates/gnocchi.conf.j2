[DEFAULT]
debug = {{ options.debug }}
api_paste_config = /etc/gnocchi/api-paste.ini

[api]
auth_mode = keystone

[indexer]
{% if database.connection -%}
url = {{ database.connection }}
{% endif -%}


[storage]
driver = ceph
ceph_pool = gnocchi
ceph_username = gnocchi
ceph_conffile = /etc/ceph/ceph.conf

[metricd]
workers = 4

{% include "parts/section-identity" %}

[audit_middleware_notifications]
driver = log
